extends layouts/main

block content
    .form-container
        form(action=`${routes.changePassword(user.id)}`, method="post")
            .title Change password
            input(type="password", name="oldPassword", placeholder="Current Password", required=true)
            input(type="password", name="password", placeholder="Password", required=true)
            input(type="password", name="password2", placeholder="Verify Password", required=true)
            input.login__button(type="submit", value="Change Password")