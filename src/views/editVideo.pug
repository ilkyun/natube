extends layouts/main

block content
    .form-container
        form(action=`${routes.editVideo(video.id)}`, method="post")
            .edit__text Title
            input(type="text", placeholder="Title", name="title", value=video.title)
            .edit__text Description
            textarea( placeholder="Description", name="description")=video.description
            input.login__button.edit__button(type="submit", value="Update Video")
        a.form-container__link(href=routes.deleteVideo(video.id)) Delete Video
