mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video#jsVideo(src=video.src)
        .videoPlayer__controls
            .videoPlayer__controls-innerbox
                .videoPlayer__column
                    span#jsPlayBtn
                        i.fas.fa-play
                    span
                        span#currentTime 00:00 
                        | / 
                        span#totalTime 00:00
                .videoPlayer__column
                    progress#jsProgress(value="0", max="100")
                .videoPlayer__column
                    .videoPlayer__subcolumn
                        span#jsVolumeBtn
                            i.fas.fa-volume-down
                    .videoPlayer__subcolumn
                        input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1")
                    span#jsFullScreenBtn
                        i.fas.fa-expand

            